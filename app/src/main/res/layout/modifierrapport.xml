<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/Titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitle"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/ModifierRapport"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Txt_ChoisirRapport"
        android:text="@string/ChoisirRapport"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_ChoisirDate"
        android:text="@string/ChoisirDate"
        android:layout_gravity="center"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:onClick="showDatePickerDialog"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Txt_DateVisite"
        android:text="@string/DateVisite"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        />



</LinearLayout>